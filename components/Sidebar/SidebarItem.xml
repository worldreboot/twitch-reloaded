<?xml version="1.0" encoding="utf-8" ?>

<component name="SidebarItem" extends="Group">

    <interface>
      <field id="itemContent" type="node" onChange="showContent" />
      <field id = "itemHasFocus" type = "bool" onChange = "showfocus" />
      <field id = "streamLink" type = "string" />
    </interface>

    <script type="text/brightscript" uri="SidebarItem.brs" />

    <children>
         <Group
              id="itemGroup">
              <MaskGroup
                   id="itemMask"
                   maskUri="pkg:/images/profile-mask.png">
                   <Poster
                        id="streamerProfile"
                        uri=""
                        width="50"
                        height="50"
                        translation="[0,0]" />
               </MaskGroup>
               <Group
                    id="focusedGroup"
                    translation="[0,5]"
                    visible="false">
                   <Poster
                        id="boundingBox"
                        uri="pkg:/images/barFocusIndicator.9.png"
                        width="240"
                        height="50"
                        translation="[60,-5]" />
                   <Label
                        id="streamerName"
                        text=""
                        translation="[80,0]">
                        <Font role = "font" uri = "pkg:/fonts/Inter-SemiBold.ttf" size = "18" />
                   </Label>
                   <Label
                        id="gameId"
                        height="20"
                        text=""
                        color="0xC26BE1FF"
                        translation="[80,20]">
                        <Font role = "font" uri = "pkg:/fonts/Inter-Regular.ttf" size = "14" />
                   </Label>
               </Group>
          </Group>
    </children>
</component>