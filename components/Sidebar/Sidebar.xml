<?xml version="1.0" encoding="utf-8" ?>

<component name="Sidebar" extends="Group">

    <interface>
        <field id="followedStreams" type="array" onChange="onFollowedStreamsChange" />
    </interface>

    <script type="text/brightscript" uri="Sidebar.brs" />

    <children>
        <Rectangle
            visible="true"
            color="0x26262CFF"
            width="78"
            height="1000"
            translation="[0,0]" />
        <Poster
            uri="pkg:/images/live_rectangle.9.png"
            width="50"
            height="20"
            translation="[10,10]" >
            <Label
                text = "LIVE"
                horizAlign = "left"
                color = "0xFFFFFFFF"
                translation = "[17,1]" >
                <Font role = "font" uri = "pkg:/fonts/Inter-Regular.ttf" size = "12" />
            </Label>
            <Poster
                uri="pkg:/images/live.png"
                translation="[5,5]" />
        </Poster>
        <MarkupGrid
             id="sidebarMarkupGrid"
             itemComponentName="SidebarItem"
             translation="[10, 40]"
             itemSize="[50, 50]"
             itemSpacing="[0,10]"
             numColumns="1"
             numRows="11"
             itemClippingRect="[0.0, 0.0, 500.0, 800.0]"
             skipFocusAnimations="true"
             vertFocusAnimationStyle="floatingFocus"
             focusBitmapUri="pkg:/images/purple_circle.png">
             <ContentNode id="sidebarMarkupGridContent" role = "content" >
           </ContentNode>
        </MarkupGrid>


    </children>

</component>
